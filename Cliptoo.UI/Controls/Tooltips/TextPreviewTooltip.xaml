<UserControl
    x:Class="Cliptoo.UI.Controls.Tooltips.TextPreviewTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Cliptoo.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Cliptoo.UI.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Visibility="{Binding IsSourceMissing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Image
                Width="24"
                Height="24"
                Margin="0,0,8,0"
                Source="{Binding MainViewModel.ErrorIcon}" />
            <TextBlock
                VerticalAlignment="Center"
                FontStyle="Italic"
                FontWeight="Bold"
                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                Text="File not found - moved or deleted?" />
        </StackPanel>

        <Grid Visibility="{Binding IsSourceMissing, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                MaxHeight="{Binding PreviewFontSize, Converter={StaticResource MultiplyConverter}, ConverterParameter=44}"
                Margin="5"
                FontFamily="{Binding PreviewFont}"
                FontSize="{Binding PreviewFontSize}"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding TooltipTextContent, Mode=OneWay}"
                TextWrapping="Wrap" />
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock
                    FontFamily="{Binding PreviewFont}"
                    FontSize="{Binding PreviewFontSize}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Text="{Binding FileName}"
                    TextWrapping="Wrap"
                    Visibility="{Binding FileName, Converter={StaticResource NullToVisibilityConverter}}" />
                <TextBlock
                    FontFamily="{Binding PreviewFont}"
                    FontSize="{Binding PreviewFontSize}"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{Binding FileProperties}"
                    TextWrapping="Wrap"
                    Visibility="{Binding FileProperties, Converter={StaticResource NullToVisibilityConverter}}" />
                <StackPanel
                    Margin="0,2,0,0"
                    Orientation="Horizontal"
                    Visibility="{Binding FileTypeInfo, Converter={StaticResource NullToVisibilityConverter}}">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="{Binding FileTypeInfoIcon}" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="{Binding PreviewFont}"
                        FontSize="{Binding PreviewFontSize}"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{Binding FileTypeInfo}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <TextBlock
                    HorizontalAlignment="Left"
                    FontFamily="{Binding PreviewFont}"
                    FontSize="{Binding PreviewFontSize}"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{Binding LineCountInfo}"
                    Visibility="{Binding LineCountInfo, Converter={StaticResource NullToVisibilityConverter}}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
