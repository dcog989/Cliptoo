<UserControl
    x:Class="Cliptoo.UI.Controls.Tooltips.ColorPreviewTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Cliptoo.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="150"
    mc:Ignorable="d">
    <StackPanel Margin="5">
        <Grid Width="100" Height="100">
            <Border
                Background="{StaticResource CheckerboardBrush}"
                CornerRadius="4"
                Visibility="{Binding Content, Converter={StaticResource ColorToTransparencyVisibilityConverter}}" />
            <Border Background="{Binding Content, Converter={StaticResource ColorToBrushConverter}}" CornerRadius="4">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Content, Converter={StaticResource ColorToTransparencyVisibilityConverter}}" Value="Visible">
                                <Setter Property="BorderThickness" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="4"
                        ShadowDepth="2"
                        Color="#80000000" />
                </Border.Effect>
            </Border>
        </Grid>
        <TextBlock
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            FontFamily="{Binding PreviewFont}"
            FontSize="{Binding PreviewFontSize}"
            Text="{Binding Content}" />
    </StackPanel>
</UserControl>
