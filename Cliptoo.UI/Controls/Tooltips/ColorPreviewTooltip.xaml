<UserControl
    x:Class="Cliptoo.UI.Controls.Tooltips.ColorPreviewTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Cliptoo.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="150"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DrawingBrush
            x:Key="CheckerboardBrush"
            TileMode="Tile"
            Viewport="0,0,10,10"
            ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#FFF">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,10,10" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="#DDD">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="0,0,5,5" />
                                <RectangleGeometry Rect="5,5,5,5" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    <StackPanel Margin="5">
        <Grid Width="100" Height="100">
            <Rectangle Fill="{StaticResource CheckerboardBrush}" Visibility="{Binding Content, Converter={StaticResource ColorToTransparencyVisibilityConverter}}" />
            <Border
                Background="{Binding Content, Converter={StaticResource ColorToBrushConverter}}"
                BorderBrush="{DynamicResource PrimaryBorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="4"
                        ShadowDepth="2"
                        Color="#80000000" />
                </Border.Effect>
            </Border>
        </Grid>
        <TextBlock
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            FontFamily="{Binding PreviewFont}"
            FontSize="{Binding PreviewFontSize}"
            Text="{Binding Content}" />
    </StackPanel>
</UserControl>
