<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Cliptoo.UI.Converters">

    <!--  Custom Brushes that don't have a direct WPF-UI equivalent  -->
    <SolidColorBrush x:Key="ErrorTextBrush" Color="{DynamicResource SystemFillColorCritical}" />
    <SolidColorBrush x:Key="HyperlinkBlueBrush" Color="#4E96CE" />
    <SolidColorBrush x:Key="HyperlinkBlueBrushHover" Color="#7CAED4" />
    <SolidColorBrush x:Key="TextOnAccentFillColorPrimaryBrush" Color="White" />

    <DrawingBrush
        x:Key="CheckerboardBrush"
        TileMode="Tile"
        Viewport="0,0,10,10"
        ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#fff">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,10,10" />
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="#aaa">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,5,5" />
                            <RectangleGeometry Rect="5,5,5,5" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:StringIsNotNullOrEmptyConverter x:Key="StringIsNotNullOrEmptyConverter" />
    <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
    <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter" />
    <converters:ColorToTransparencyVisibilityConverter x:Key="ColorToTransparencyVisibilityConverter" />
    <converters:EqualityMultiConverter x:Key="EqualityMultiConverter" />
    <converters:PaddingSizeToThicknessConverter x:Key="PaddingSizeToThicknessConverter" />
    <converters:ClipTypeToFriendlyNameConverter x:Key="ClipTypeToFriendlyNameConverter" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
    <converters:MultiplyConverter x:Key="MultiplyConverter" />
    <converters:IsTargetedForHotkeyCaptureConverter x:Key="IsTargetedForHotkeyCaptureConverter" />
    <converters:AnyTrueToVisibilityConverter x:Key="AnyTrueToVisibilityConverter" />
    <converters:AllTrueToVisibilityConverter x:Key="AllTrueToVisibilityConverter" />
    <converters:MultiCommandParameterConverter x:Key="MultiCommandParameterConverter" />

</ResourceDictionary>
