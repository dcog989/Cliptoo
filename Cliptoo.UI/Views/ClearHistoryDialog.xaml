<UserControl
    x:Class="Cliptoo.UI.Views.ClearHistoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Cliptoo.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ClearHistoryDialogViewModel}"
    d:DesignHeight="150"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            FontSize="16"
            FontWeight="SemiBold"
            Text="Clear Clipboard History?" />
        <TextBlock
            Margin="0,12,0,0"
            Text="This will permanently delete items from your history and cannot be undone."
            TextWrapping="Wrap" />
        <CheckBox
            Margin="0,15,0,0"
            Content="Delete pinned items as well"
            IsChecked="{Binding DeletePinned}" />
    </StackPanel>
</UserControl>
