<UserControl
    x:Class="Cliptoo.UI.Views.ClearHistoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Cliptoo.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ClearHistoryDialogViewModel}"
    d:DesignHeight="120"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="0,8,0,8"
            Text="Select the items you want to permanently delete:"
            TextWrapping="Wrap" />
        <CheckBox
            Margin="16,8,0,0"
            Content="Delete favorite clips"
            IsChecked="{Binding DeleteFavorite}" />
        <CheckBox
            Margin="16,8,0,0"
            Content="Delete logs"
            IsChecked="{Binding DeleteLogs}" />
        <CheckBox
            Margin="16,8,0,0"
            Content="Delete all other clips"
            IsChecked="{Binding DeleteOtherClips}" />
    </StackPanel>
</UserControl>
