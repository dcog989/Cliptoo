<UserControl
    x:Class="Cliptoo.UI.Views.ClearHistoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Cliptoo.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ClearHistoryDialogViewModel}"
    d:DesignHeight="150"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="0,12,0,0"
            Text="Permanently delete all clips from your history?"
            TextWrapping="Wrap" />
        <CheckBox
            Margin="0,15,0,0"
            Content="Delete pinned clips as well"
            IsChecked="{Binding DeletePinned}" />
        <CheckBox
            Margin="0,8,0,0"
            Content="Delete logs as well"
            IsChecked="{Binding DeleteLogs}" />
    </StackPanel>
</UserControl>
