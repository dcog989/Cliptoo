<UserControl
    x:Class="Cliptoo.UI.Views.SettingsPages.VisualsSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Cliptoo.Core;assembly=Cliptoo.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <x:Array x:Key="ThemeOptions" Type="sys:String">
            <sys:String>System</sys:String>
            <sys:String>Light</sys:String>
            <sys:String>Dark</sys:String>
        </x:Array>
    </UserControl.Resources>
    <ScrollViewer Padding="16,24,16,16" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock
                FontSize="16"
                FontWeight="SemiBold"
                Text="Main Window" />
            <StackPanel Margin="24,16,0,0" Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="Font family" />
                <ComboBox
                    Margin="0,0,12,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding IsFontsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}"
                    ItemsSource="{Binding SystemFonts}"
                    SelectedItem="{Binding SelectedFontFamily}"
                    Style="{StaticResource SettingsComboBoxStyle}" />
                <TextBlock
                    Margin="24,0,12,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="Font size" />
                <ui:NumberBox
                    Width="100"
                    VerticalAlignment="Center"
                    ClearButtonEnabled="False"
                    Maximum="24"
                    Minimum="10"
                    SmallChange="1"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,12,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="px" />
                <TextBlock
                    Margin="24,0,12,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="Line padding" />
                <ComboBox
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ItemsSource="{StaticResource PaddingOptions}"
                    SelectedItem="{Binding ClipItemPadding}"
                    Style="{StaticResource SettingsComboBoxStyle}" />
            </StackPanel>

            <Grid Margin="24,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource SettingLabel}"
                    Text="Theme" />
                <ComboBox
                    Grid.Column="1"
                    Margin="0,0,12,0"
                    ItemsSource="{StaticResource ThemeOptions}"
                    SelectedItem="{Binding Theme}"
                    Style="{StaticResource SettingsComboBoxStyle}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="24,0,12,0"
                    Style="{StaticResource SettingLabel}"
                    Text="Accent" />
                <ComboBox
                    Grid.Column="3"
                    MinWidth="100"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center"
                    SelectedValue="{Binding AccentChromaLevel}"
                    SelectedValuePath="Tag"
                    Style="{StaticResource SettingsComboBoxStyle}">
                    <ComboBoxItem Content="Vibrant" Tag="vibrant" />
                    <ComboBoxItem Content="Muted" Tag="muted" />
                </ComboBox>
                <Slider
                    Grid.Column="5"
                    VerticalAlignment="Center"
                    Background="{Binding OklchHueBrush}"
                    IsMoveToPointEnabled="True"
                    Maximum="360"
                    Minimum="0"
                    Style="{StaticResource HueSliderStyle}"
                    Value="{Binding AccentHue, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <TextBlock
                Margin="0,24,0,0"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Preview Tooltip" />
            <StackPanel Margin="24,18,0,0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Preview tooltip delay" />
                <ui:NumberBox
                    Width="110"
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    ClearButtonEnabled="False"
                    Minimum="0"
                    SmallChange="50"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding HoverPreviewDelay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="ms (0 to disable, hotkey still works)" />
            </StackPanel>

            <StackPanel Margin="24,16,0,0" Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="Font family" />
                <ComboBox
                    Margin="0,0,12,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding IsFontsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}"
                    ItemsSource="{Binding SystemFonts}"
                    SelectedItem="{Binding SelectedPreviewFontFamily}"
                    Style="{StaticResource SettingsComboBoxStyle}" />
                <TextBlock
                    Margin="24,0,12,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="Font size" />
                <ui:NumberBox
                    Width="100"
                    VerticalAlignment="Center"
                    ClearButtonEnabled="False"
                    Maximum="24"
                    Minimum="10"
                    SmallChange="1"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding PreviewFontSize, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="px" />
            </StackPanel>

            <StackPanel Margin="24,16,0,0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Text preview max width" />
                <ui:NumberBox
                    Width="110"
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    ClearButtonEnabled="False"
                    Minimum="200"
                    SmallChange="10"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding Settings.PreviewTooltipMaxWidth, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,32,0"
                    VerticalAlignment="Center"
                    Text="px" />

                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource SettingLabel}"
                    Text="Image preview max width / height" />
                <ui:NumberBox
                    Width="110"
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    ClearButtonEnabled="False"
                    Minimum="100"
                    SmallChange="10"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding Settings.HoverImagePreviewSize, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    Text="px" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
