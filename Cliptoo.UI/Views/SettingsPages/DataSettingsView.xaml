<UserControl
    x:Class="Cliptoo.UI.Views.SettingsPages.DataSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer Padding="15,20,15,15" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource SettingLabel}" Text="Maximum total clips" />
                <ui:NumberBox
                    Width="110"
                    Margin="6,0,12,0"
                    ClearButtonEnabled="False"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding MaxClipsTotal, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="24,0,0,0"
                    Style="{StaticResource SettingLabel}"
                    Text="Maximum days to keep" />
                <ui:NumberBox
                    Width="100"
                    Margin="6,0,0,0"
                    ClearButtonEnabled="False"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding CleanupAgeDays, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,12,0"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource SettingLabel}"
                    Text="(0 = unlimited)" />
            </StackPanel>

            <StackPanel Margin="0,16,0,0" Orientation="Horizontal">
                <TextBlock Style="{StaticResource SettingLabel}" Text="Maximum clip size" />
                <ui:NumberBox
                    Width="110"
                    Margin="6,0,0,0"
                    ClearButtonEnabled="False"
                    Minimum="1"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding MaxClipSizeMb, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="6,0,12,0"
                    Style="{StaticResource SettingLabel}"
                    Text="MB" />
            </StackPanel>

            <TextBlock
                Margin="0,24,0,12"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Data Management" />
            <StackPanel
                Margin="24,0,0,0"
                IsEnabled="{Binding !IsBusy}"
                Orientation="Horizontal">
                <ui:Button
                    Appearance="Secondary"
                    Command="{Binding ClearHistoryCommand}"
                    Content="Clear History..."
                    ToolTip="Delete all non-pinned clips from the database." />
                <ui:Button
                    Margin="12,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ClearOversizedCommand}"
                    Content="Clear Oversized..."
                    ToolTip="Delete clips larger than a specified size." />
                <ui:Button
                    Margin="12,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ClearCachesCommand}"
                    Content="Clear Caches"
                    ToolTip="Delete all cached thumbnails and temporary image files." />
                <ui:Button
                    Margin="12,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding RemoveDeadheadClipsCommand}"
                    Content="Deadhead"
                    ToolTip="Remove clips for files or folders that no longer exist." />
                <ui:Button
                    Margin="12,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding RunHeavyMaintenanceCommand}"
                    Content="Run Maintenance"
                    ToolTip="Run the full daily maintenance routine now (database cleanup, cache pruning, etc)." />
            </StackPanel>

            <Separator Margin="0,24,0,16" />

            <TextBlock Text="{Binding StatsSummary}" TextBlock.TextAlignment="Center" />
            <StackPanel
                Margin="0,6,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock>
                    <Run FontWeight="SemiBold" Text="{Binding Stats.UniqueClipsEver, Mode=OneWay, StringFormat={}{0:N0}}" />
                    <Run Text="unique clips saved and" />
                    <Run FontWeight="SemiBold" Text="{Binding Stats.PasteCount, Mode=OneWay, StringFormat={}{0:N0}}" />
                    <Run Text="pastes" />
                </TextBlock>
                <TextBlock Visibility="{Binding Stats.CreationTimestamp, Converter={StaticResource NullToVisibilityConverter}}">
                    <Run Text=" since DB created on" />
                    <Run Text="{Binding Stats.CreationTimestamp, Mode=OneWay, StringFormat='{}{0:yyyy/MM/dd}'}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="." />
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
