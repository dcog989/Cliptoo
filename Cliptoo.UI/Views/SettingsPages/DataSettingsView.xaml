<UserControl
    x:Class="Cliptoo.UI.Views.SettingsPages.DataSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,8,0"
                    Style="{StaticResource SettingLabel}"
                    Text="Maximum" />
                <ui:NumberBox
                    ClearButtonEnabled="False"
                    Maximum="9990"
                    Minimum="10"
                    SmallChange="10"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    ToolTip="0 = no limit."
                    Value="{Binding MaxClipsTotal, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="8,0,8,0"
                    Style="{StaticResource SettingLabel}"
                    Text="clips" />

                <TextBlock
                    Margin="32,0,8,0"
                    Style="{StaticResource SettingLabel}"
                    Text="Maximum age" />
                <ui:NumberBox
                    ClearButtonEnabled="False"
                    Maximum="9999"
                    Minimum="0"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    ToolTip="0 = no limit."
                    Value="{Binding CleanupAgeDays, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="8,0,0,0"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource SettingLabel}"
                    Text="days" />

                <TextBlock
                    Margin="32,0,8,0"
                    Style="{StaticResource SettingLabel}"
                    Text="Maximum size" />
                <ui:NumberBox
                    ClearButtonEnabled="False"
                    Maximum="9999"
                    Minimum="1"
                    Style="{StaticResource SettingsNumberBoxStyle}"
                    Value="{Binding MaxClipSizeMb, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="8,0,8,0"
                    Style="{StaticResource SettingLabel}"
                    Text="MB" />
            </StackPanel>

            <Separator Margin="0,8,0,8" />

            <TextBlock
                Margin="0,8,0,8"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Maintenance" />

            <StackPanel
                Margin="0,8,0,8"
                IsEnabled="{Binding !IsBusy}"
                Orientation="Horizontal">
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ClearHistoryCommand}"
                    Content="Clear History..."
                    ToolTip="Delete all non-favorite clips from the database." />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ClearOversizedCommand}"
                    Content="Clear Oversized..."
                    ToolTip="Delete clips larger than a specified size." />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ClearCachesCommand}"
                    Content="Clear Caches"
                    ToolTip="Delete all cached thumbnails and temporary image files." />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding RemoveDeadheadClipsCommand}"
                    Content="Deadhead"
                    ToolTip="Remove clips for files or folders that no longer exist." />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding RunHeavyMaintenanceCommand}"
                    Content="Run Maintenance"
                    ToolTip="Run the full daily maintenance routine now (database cleanup, cache pruning, etc)." />
            </StackPanel>

            <Separator Margin="0,8,0,8" />

            <TextBlock
                Margin="0,8,0,8"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Import / Export" />

            <StackPanel
                Margin="0,8,0,8"
                IsEnabled="{Binding !IsBusy}"
                Orientation="Horizontal">
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ExportAllCommand}"
                    Content="Export All..."
                    ToolTip="Export all clips in the database to a JSON file." />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ExportFavoriteCommand}"
                    Content="Export Favorites..."
                    ToolTip="Export only favorite clips to a JSON file." />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Command="{Binding ImportCommand}"
                    Content="Import..."
                    ToolTip="Import clips from a previously exported JSON file." />
            </StackPanel>

            <Separator Margin="0,8,0,8" />

            <TextBlock
                Margin="0,8,0,8"
                Text="{Binding StatsSummary}"
                TextBlock.TextAlignment="Center" />

            <StackPanel
                Margin="0,8,0,8"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock>
                    <Run FontWeight="SemiBold" Text="{Binding Stats.UniqueClipsEver, Mode=OneWay, StringFormat={}{0:N0}}" />
                    <Run Text="unique clips saved and" />
                    <Run FontWeight="SemiBold" Text="{Binding Stats.PasteCount, Mode=OneWay, StringFormat={}{0:N0}}" />
                    <Run Text="pastes" />
                </TextBlock>
                <TextBlock Visibility="{Binding Stats.CreationTimestamp, Converter={StaticResource NullToVisibilityConverter}}">
                    <Run Text=" since DB created on" />
                    <Run Text="{Binding Stats.CreationTimestamp, Mode=OneWay, StringFormat='{}{0:yyyy/MM/dd}'}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="." />
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
