<UserControl
    x:Class="Cliptoo.UI.Views.SettingsPages.GeneralSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Cliptoo.UI.Helpers"
    xmlns:logging="clr-namespace:Cliptoo.Core.Logging;assembly=Cliptoo.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="LogLevelEnumValues"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="logging:LogLevel" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style
            x:Key="SettingsIconButtonStyle"
            BasedOn="{StaticResource {x:Type ui:Button}}"
            TargetType="ui:Button">
            <Setter Property="Padding" Value="6" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer Padding="16,24,16,16" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel Margin="0,0,12,0" Orientation="Horizontal">
                <TextBlock Style="{StaticResource SettingLabel}" Text="Launch position" />
                <ComboBox
                    HorizontalAlignment="Left"
                    ItemsSource="{StaticResource LaunchPositionOptions}"
                    SelectedItem="{Binding LaunchPosition}"
                    Style="{StaticResource SettingsComboBoxStyle}" />
                <TextBlock
                    Margin="32,0,12,0"
                    Style="{StaticResource SettingLabel}"
                    Text="Logging level" />
                <ComboBox
                    MinWidth="100"
                    ItemsSource="{Binding Source={StaticResource LogLevelEnumValues}}"
                    SelectedItem="{Binding LoggingLevel}"
                    Style="{StaticResource SettingsComboBoxStyle}" />
            </StackPanel>

            <StackPanel Margin="24,12,0,0" Visibility="{Binding LaunchPosition, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=fixed}">
                <TextBlock Style="{StaticResource SettingLabel}" Text="Fixed Position (X, Y):" />
                <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                    <ui:NumberBox
                        Width="100"
                        ClearButtonEnabled="False"
                        Style="{StaticResource SettingsNumberBoxStyle}"
                        Value="{Binding Settings.FixedX}" />
                    <ui:NumberBox
                        Width="100"
                        Margin="12,0,0,0"
                        ClearButtonEnabled="False"
                        Style="{StaticResource SettingsNumberBoxStyle}"
                        Value="{Binding Settings.FixedY}" />
                </StackPanel>
            </StackPanel>

            <UniformGrid Margin="0,16,0,0" Columns="3">
                <CheckBox
                    Margin="0,0,12,16"
                    Content="Start with Windows"
                    IsChecked="{Binding StartWithWindows}" />
                <CheckBox
                    Margin="0,0,12,16"
                    Content="Display logo"
                    IsChecked="{Binding DisplayLogo}" />
                <CheckBox
                    Margin="0,0,12,16"
                    Content="Always paste as plain text"
                    IsChecked="{Binding PasteAsPlainText}"
                    ToolTip="Strips formatting from clips like RTF or images before pasting." />
                <CheckBox
                    Margin="0,0,12,0"
                    Content="Remember search input"
                    IsChecked="{Binding Settings.RememberSearchInput}"
                    ToolTip="Keep the search term in the search box when the window is reopened." />
                <CheckBox
                    Margin="0,0,12,0"
                    Content="Remember filter selection"
                    IsChecked="{Binding Settings.RememberFilterSelection}"
                    ToolTip="Keep the last used filter active when the window is reopened." />
                <CheckBox
                    Margin="0,0,12,0"
                    Content="Move clips to top on paste"
                    IsChecked="{Binding Settings.MoveClipToTopOnPaste}"
                    ToolTip="When using a clip, move it to the top of the list." />
            </UniformGrid>

            <Separator Margin="0,12,0,12" />

            <TextBlock
                FontSize="16"
                FontWeight="SemiBold"
                Text="External Apps" />

            <Grid Margin="0,6,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource SettingLabel}"
                    Text="Compare program" />
                <ui:TextBox
                    Grid.Column="1"
                    Style="{StaticResource SettingsTextBoxStyle}"
                    Text="{Binding CompareToolPath, UpdateSourceTrigger=PropertyChanged}" />
                <ui:Button
                    Grid.Column="2"
                    Margin="12,0,0,0"
                    Command="{Binding BrowseCompareToolCommand}"
                    Content="Browse..."
                    Style="{StaticResource SettingsButtonStyle}" />
            </Grid>

            <TextBlock
                Margin="0,6,0,12"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="Configure apps for the 'Send To' and 'Compare' context menu actions. &quot;{0}&quot; is a placeholder for the clip's file path."
                TextWrapping="Wrap" />

            <ListView
                MaxHeight="200"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding SendToTargets}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" MinWidth="100" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBox
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"
                                PlaceholderText="Display Name"
                                Style="{StaticResource SettingsTextBoxStyle}"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                            <Border
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                Padding="8,6"
                                VerticalAlignment="Center"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Path}"
                                    TextTrimming="CharacterEllipsis"
                                    ToolTip="{Binding Path}" />
                            </Border>
                            <ui:TextBox
                                Grid.Column="2"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"
                                PlaceholderText="Optional. Use {0} for path."
                                Style="{StaticResource SettingsTextBoxStyle}"
                                Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}" />

                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <ui:Button
                                    Command="{Binding DataContext.MoveSendToTargetUpCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource SettingsIconButtonStyle}">
                                    <ui:SymbolIcon FontSize="16" Symbol="ArrowUp24" />
                                </ui:Button>
                                <ui:Button
                                    Margin="6,0,0,0"
                                    Command="{Binding DataContext.MoveSendToTargetDownCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource SettingsIconButtonStyle}">
                                    <ui:SymbolIcon FontSize="16" Symbol="ArrowDown24" />
                                </ui:Button>
                            </StackPanel>
                            <ui:Button
                                Grid.Column="4"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                Appearance="Secondary"
                                Command="{Binding DataContext.RemoveSendToTargetCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource SettingsIconButtonStyle}"
                                ToolTip="Remove this target">
                                <ui:ImageIcon
                                    Width="16"
                                    Height="16"
                                    Source="{Binding DataContext.TrashIcon, RelativeSource={RelativeSource AncestorType=ListView}}" />
                            </ui:Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ui:Button
                Margin="0,12,0,0"
                HorizontalAlignment="Left"
                Appearance="Secondary"
                Command="{Binding AddSendToTargetCommand}"
                Content="Add Application..." />
        </StackPanel>
    </ScrollViewer>
</UserControl>
