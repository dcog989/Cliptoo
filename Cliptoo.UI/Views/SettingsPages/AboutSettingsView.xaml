<UserControl
    x:Class="Cliptoo.UI.Views.SettingsPages.AboutSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer Padding="16">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

            <StackPanel
                Margin="0,0,0,16"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <ui:ImageIcon
                    Width="138"
                    Height="138"
                    Margin="0,0,16,0"
                    Source="{Binding LogoIcon}" />

                <StackPanel VerticalAlignment="Center" TextBlock.TextAlignment="Center">
                    <TextBlock
                        FontFamily="Source Code Pro"
                        FontSize="32"
                        Text="Cliptoo" />
                    <TextBlock Text="{Binding AppVersion, StringFormat='Version: {0}'}" />
                    <TextBlock Margin="0,8,0,0" FontSize="16">
                        <TextBlock.Text>
                            The advanced clipboard manager.
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock
                        Margin="0,8,0,0"
                        FontFamily="Source Code Pro"
                        FontSize="16"
                        FontStyle="Italic">
                        <TextBlock.Text>
                            "Klaatu barada nikto!"
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Margin="0,8,0,0">
                        <Hyperlink Command="{Binding OpenGitHubUrlCommand}">
                            <Run Text="{Binding GitHubUrl, Mode=OneWay}" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <Separator Margin="0,8,0,8" />

            <TextBlock Margin="0,8,0,0" TextBlock.TextAlignment="Center">
                <Run Text="Executable:" />
                <Hyperlink Command="{Binding OpenExeFolderCommand}">
                    <Run Text="{Binding ExePathDir, Mode=OneWay}" />
                </Hyperlink>
                <Run Text="\" />
                <Run Text="{Binding ExePathFile, Mode=OneWay}" />
            </TextBlock>
            <TextBlock Margin="0,8,0,0" TextBlock.TextAlignment="Center">
                <Run Text="Settings, data, logs:" />
                <Hyperlink Command="{Binding OpenSettingsFolderCommand}">
                    <Run Text="{Binding SettingsFolderPath, Mode=OneWay}" />
                </Hyperlink>
            </TextBlock>
            <TextBlock Margin="0,8,0,8" TextBlock.TextAlignment="Center">
                <Run Text="Temporary caches:" />
                <Hyperlink Command="{Binding OpenTempDataFolderCommand}">
                    <Run Text="{Binding TempDataPath, Mode=OneWay}" />
                </Hyperlink>
            </TextBlock>

            <Separator Margin="0,8,0,8" />

            <TextBlock
                Margin="0,8,0,8"
                FontStyle="Italic"
                TextBlock.TextAlignment="Center">
                <Hyperlink Command="{Binding OpenAcknowledgementsWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Run Text="Thanks and acknowledgements." />
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
